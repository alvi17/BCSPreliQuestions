<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#24f7b929"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="অনুশীলন-১"
            android:layout_weight=".5"
            android:layout_margin="20dp"
            android:background="@drawable/square_button"
            android:id="@+id/exbutton1" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="অনুশীলন-২"
            android:id="@+id/exbutton2"
            android:layout_weight=".5"
            android:layout_margin="20dp"
            android:background="@drawable/square_button"
            />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#232"

            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="কুইজ- ১"
        android:id="@+id/exbutton3"
        android:layout_weight=".5"
        android:layout_margin="20dp"
        android:background="@drawable/square_button"
         />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="কুইজ- ২"
        android:id="@+id/exbutton4"
        android:layout_weight=".5"
        android:layout_margin="20dp"
        android:background="@drawable/square_button"
         />
            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#232"

            android:layout_gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="কুইজ- ৩"
        android:layout_weight=".33"
        android:layout_margin="20dp"

        android:id="@+id/exbutton5"
        android:background="@drawable/square_button"
       />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="কুইজ- ৪"
        android:id="@+id/exbutton6"
        android:layout_weight=".33"
        android:layout_margin="20dp"
        android:background="@drawable/square_button"
      />
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="কুইজ- ৫ "
                android:id="@+id/exbutton7"
                android:layout_weight=".33"
                android:layout_margin="20dp"
                android:background="@drawable/square_button"
                 />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#232"

        android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>